function string_to_slug(store,language) {
  str = $('#input-name'+language+'').val();
  str = str.toString().replace(/^\s+|\s+$/g, ''); // trim
  str = str.toLowerCase();

  // remove accents, swap ñ for n, etc
  var from = "àáäâèéëêìíïîòóöôùúüûñç·/_,:;";
  var to   = "aaaaeeeeiiiioooouuuunc------";
  for (var i=0, l=from.length ; i<l ; i++) {
    str = str.toString().replace(new RegExp(from.charAt(i), 'g'), to.charAt(i));
  }

  str = str.toString().replace(/[^a-z0-9 -]/g, '') // remove invalid chars
    .replace(/\s+/g, '-') // collapse whitespace and replace by -
    .replace(/-+/g, '-'); // collapse dashes
  //$('#product-seo-url-'+store+'-'+language+'').val(str);

    
  //return str;
}

