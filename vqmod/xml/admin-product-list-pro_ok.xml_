function getDetaxed(value) {
	var taxClass= $('select[name="tax_class_id"]').val();
	if (taxClass == 0) return value;
	value = parseFloat(value);
	if (value == 0 ) return 0;
	var deTaxed;
	if (autodetect) {
		var taxRates = allTaxRates[taxClass];
		var index;
		var taxP = 0, taxF = 0;
		for (index in taxRates) {
			if (taxRates[index].type == 'F') {
				taxF += taxRates[index].rate;
			} else if (taxRates[index].type == 'P') {
				taxP += taxRates[index].rate/100;
			}
		}
		deTaxed = (value - taxF)/(1+taxP);
	} else {
		deTaxed = value / multiplyer;
	}
	return doRound(deTaxed,4);
}
	
function getTaxed(value) {
	var taxClass= $('select[name="tax_class_id"]').val();
	if ((autodetect)&&(taxClass == 0)) return value;
	value = parseFloat(value);
	if (value == 0 ) return 0;
	var taxed;
	
	if (autodetect) {
		var taxRates = allTaxRates[taxClass];
		var index;
		var tax = 0;
		for (index in taxRates) {
			if (taxRates[index].type == 'F') {
				tax += taxRates[index].rate;
			} else if (taxRates[index].type == 'P') {
				tax += (value / 100 * taxRates[index].rate);
			}
		}
		taxed = value + tax;
	} else {
		taxed = value * multiplyer;
	}
	return doRound(taxed,4);
}
