                      {{ text_yes }}
                      {% endif %} </label>
                    <label class="radio-inline"> {% if not config_admin_product_tab_attribute_auth %}
                      <input type="radio" name="config_admin_product_tab_attribute_auth" value="0" checked="checked" />
                      {{ text_no }}
                      {% else %}
                      <input type="radio" name="config_admin_product_tab_attribute_auth" value="0" />
                      {{ text_no }}
                      {% endif %} </label>
                  </div>
                  <label class="col-sm-2 control-label">{{ text_admin_product_extras_fields_size }}</label>
                  <div class="col-sm-2">
                    <select name="config_admin_product_fields_attribute_size" id="config_admin_product_fields_attribute_size" class="form-control">
                        {% for item in items %}
                            {% if config_admin_product_fields_attribute_size == item %}
                            <option value="{{ item }}" selected="selected">{{ item }}</option>
                            {% else %}
                            <option value="{{ item }}">{{ item }}</option>
                            {% endif %}
                        {% endfor %}
                    </select>
                  </div> 
